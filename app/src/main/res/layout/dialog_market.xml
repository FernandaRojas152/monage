<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <RelativeLayout
        android:layout_width="600dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="600dp"
            android:layout_height="600dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/background_dialog">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="130dp"
                android:text="Supermercado"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/verduras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1"
                android:layout_marginTop="25dp"
                android:text="Comprar Verduras"
                android:textSize="12dp"
                android:textStyle="bold"></RadioButton>

            <RadioButton
                android:id="@+id/frutas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/verduras"
                android:layout_marginTop="5dp"
                android:text="Comprar Frutas"
                android:textSize="12dp"
                android:textStyle="bold"></RadioButton>

            <RadioButton
                android:id="@+id/carne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frutas"
                android:layout_marginTop="5dp"
                android:text="Comprar Carne"
                android:textSize="12dp"
                android:textStyle="bold"></RadioButton>

            <Button
                android:id="@+id/acceptTask"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="40dp"
                android:background="@drawable/backbtn"
                android:text="Aceptar"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageMarket"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:src="@drawable/market__1_" />
    </RelativeLayout>
</RelativeLayout>

