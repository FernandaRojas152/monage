<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="-147dp"
    tools:layout_editor_absoluteY="2dp">

    <TextView
        android:id="@+id/textview4"
        android:layout_width="263dp"
        android:layout_height="34dp"
        android:layout_marginTop="24dp"
        android:padding="4dp"
        android:text="Inversiones disponibles"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        app:autoSizeTextType="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/utilidad" />

    <TextView
        android:id="@+id/textview3"
        android:layout_width="168dp"
        android:layout_height="38dp"
        android:layout_marginTop="32dp"
        android:padding="4dp"
        android:text="Utilidades"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        app:autoSizeTextType="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inverMoney" />

    <TextView
        android:id="@+id/inverMoney"
        android:layout_width="342dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/backtxt"
        android:padding="8dp"
        android:text="$1.250.000"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/principal"
        android:textIsSelectable="false"
        android:textSize="34sp"
        android:textStyle="bold"
        app:autoSizeTextType="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview2" />

    <TextView
        android:id="@+id/utilidad"
        android:layout_width="342dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/backtxt"
        android:padding="8dp"
        android:text="$820.000"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/principal"
        android:textIsSelectable="false"
        android:textSize="34sp"
        android:textStyle="bold"
        app:autoSizeTextType="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview3" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="168dp"
        android:layout_height="59dp"
        android:layout_marginTop="36dp"
        android:padding="4dp"
        android:text="Dinero invertido en acciones"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        app:autoSizeTextType="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/backtxt"
        android:padding="4dp"
        android:text="Inversiones"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/principal"
        android:textIsSelectable="false"
        android:textStyle="bold"
        app:autoSizeTextType="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moneyInv" />

    <TextView
        android:id="@+id/moneyInv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/backtxt"
        android:padding="8dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/principal"
        android:textIsSelectable="false"
        android:textStyle="bold"
        app:autoSizeTextType="none"
        app:layout_constraintBottom_toBottomOf="@+id/imageView17"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView17"
        app:layout_constraintTop_toTopOf="@+id/imageView17" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/coin"
        app:layout_constraintStart_toEndOf="@+id/energyInv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lightning" />

    <TextView
        android:id="@+id/energyInv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/backtxt"
        android:padding="8dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/principal"
        android:textIsSelectable="false"
        android:textStyle="bold"
        app:autoSizeTextType="none"
        app:layout_constraintBottom_toBottomOf="@+id/imageView19"
        app:layout_constraintStart_toEndOf="@+id/imageView19"
        app:layout_constraintTop_toTopOf="@+id/imageView19" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/inverRecycler"
        android:layout_width="409dp"
        android:layout_height="236dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview4" />

</androidx.constraintlayout.widget.ConstraintLayout>